            </Label>
            <Label GridPane.columnIndex="2">
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
            <Label GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
            <Label GridPane.rowIndex="1">
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
            <Label GridPane.columnIndex="1">
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
            <Label>
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </GridPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#restart" text="Restart Game" />
                  <MenuItem mnemonicParsing="false" onAction="#reset" text="Reset Data" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Network">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#resetId" text="Reset ID" />
                <MenuItem fx:id="connectMenuItem" mnemonicParsing="false" onAction="#connectToClient" text="Connect to Client" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="224.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Current Turn: ">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label id="player-label" fx:id="currentPlayerLabel">
               <font>
                  <Font size="32.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <Label fx:id="xScore" />
