        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label GridPane.columnIndex="2" GridPane.rowIndex="2">
               <font>
                  <Font size="90.0" />
               </font>
            </Label>
            <Label GridPane.columnIndex="1" GridPane.rowIndex="2">
               <font>
                  <Font size="90.0" />
               </font>
